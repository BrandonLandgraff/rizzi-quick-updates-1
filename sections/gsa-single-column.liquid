                                data-aos-order="1"
                                class="aos-init aos-animate {{ block.settings.display_options }}"
                                {{ block.shopify_attributes }}
                            >
                                <div class="gsa-flex gsa-items-center gsa-my-2 gsa-mb-4">
                                {% render 'gsa-bullet' %}
                                <p class="gsa-font-bold gsa-pl-2 gsa-m-0">{{ block.settings.bullet }}</p>
                                </div>
                            </div>

