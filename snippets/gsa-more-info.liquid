<style>
    /* Popup Image CSS */
    #gsa-aspect-ratio-image img {
        width: 100%;
        height: 100%;
        border-radius: 4px;
      }
  
      .gsa-pop-img {
        max-width: {{ section.settings.img_max_width }}px;
        margin: 12px auto 0px auto;
        border-radius: 4px;
      }
</style>

<div>
    <a id="gsa-blob-buttons" onclick="document.getElementById('moreInfo').showModal()" class="gsa-animated-btn gsa-m-0 gsa-p-0 gsa-w-72" style="margin-top: 12px; background: #efe7e7; color: black;">
        <div class="gsa-flex gsa-justify-between gsa-items-center">
        <span>{{ block.settings.btn_text }}</span>
        </div>
    </a>
    <dialog id="moreInfo" class="gsa-w-11/12 md:gsa-w-1/2 gsa-p-5  gsa-bg-white gsa-rounded-2xl">  
        <div class="gsa-flex gsa-flex-col gsa-w-full gsa-h-auto ">
            <div class="gsa-flex gsa-w-full gsa-h-auto gsa-justify-between gsa-items-center" style="order: 1 !important;">
                <div class="gsa-flex gsa-w-10/12 gsa-h-auto gsa-justify-left gsa-items-center gsa-text-2xl gsa-font-bold" style="order: 1 !important;">
                        {{ block.settings.title }}
                </div>
                <div onclick="document.getElementById('moreInfo').close();" class="gsa-flex gsa-w-1/12 gsa-h-auto gsa-justify-center gsa-cursor-pointer" style="order: 2 !important;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </div>
            </div>
                {% if block.settings.image != blank %}
                    <div id="gsa-aspect-ratio-image" class="gsa-pop-img" style="order: 2 !important;">
                    {{ block.settings.image | image_url: width: 1440 | image_tag }}
                    </div>
                {% endif %}
                <div class="gsa-flex gsa-py-4 gsa-justify-center gsa-items-center gsa-text-left gsa-text-gray-500" style="order: 3 !important;">
                <div class="column__image__wrapper gsa-w-full gsa-h-full">
                    <p>{{ block.settings.description }}</p>
                </div>
            </div>
            </div>
    </dialog>
</div>